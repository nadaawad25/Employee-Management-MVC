@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count()>0)
{
    <div class="alert alert-light">
        <h3>All Users</h3>
        <div class="m-2">
            <form class="row offset-2 " asp-action="Index">
                <div class="col-8">
                    <input class="form-control" type="text" placeholder="User's Name " name="SearchValue" />
                </div>
                <div class="col-4">
                    <input type="submit" value="Search" class="btn btn-info " />
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-hover mt-5" >
        <thead>
            <tr>
                <td >@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.FName)</td>
                <td>@Html.DisplayNameFor(U=>U.LName)</td>
                <td>@Html.DisplayNameFor(U=>U.Email)</td>
                <td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@String.Join("," ,User.Roles)</td>
                    <partial name="_ButtonPartialView" model="@User.Id" >
                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <div class="alert alert-info">
        <h3>There Is No Users !</h3>
    </div>
}

