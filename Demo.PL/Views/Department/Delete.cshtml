
@model Department
@{
    ViewData["Title"] = "Delete";
}

@if (Model != null)
{

    <h1> Are You Sure to delete @Model.Name </h1>
    <div asp-validation-summary="All"></div>
    <form asp-action="Delete">
        <div class="form-group">
            <label class="col-form-label">Code</label>
            <input class="form-control" readonly asp-for="Code" />
        </div>

        <div class="form-group">
            <label class="col-form-label">Name</label>
            <input class="form-control" readonly asp-for="Name" />
        </div>

        <div class="form-group">
            <label class="col-form-label">DateOfCreation</label>
            <input class="form-control" readOnly asp-for="DateOfCreation" />
        </div>
      <input type="submit" value="Delete" class="mt-5 btn btn-danger"  />
        <a asp-action="Index" class="btn btn-light mt-5">Cancel</a>


    </form>


}
else
{
    <div>
        <h3>There is No department</h3>
    </div>
}
