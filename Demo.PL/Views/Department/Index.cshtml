
@model IEnumerable<Department>
@{
    ViewData["Title"] = "AllDepartments";
}
@if(TempData["Message"] != null)
{
    <div class="alert alert-success" id="tempMessage1">
        @TempData["Message"]
    </div>
}
@if (TempData["Message2"] != null)
{
    <div class="alert alert-danger" id="tempMessage2">
        @TempData["Message2"]
    </div>
}

<a asp-action="Create" class="btn btn-success mt-2">Create New Department</a>
<br />

@if(Model.Count() >0)
{
    <h1 class="mt-2">All Departments</h1>
    <br />
    <table class="table table-striped table-hover"> 
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=> D.Code )</td>
                <td>@Html.DisplayNameFor(D => D.Name )</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
              <td>Update</td>
             <td>Details</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>

                    <partial name="_ButtonPartialView" model="@department.Id.ToString()">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There IS No Departments</h3>
    </div>
}

