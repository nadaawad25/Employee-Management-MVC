@model RoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.RoleName </h1>
<form asp-action="Edit" enctype="multipart/form-data">

    <div class="form-group">
        <label class="col-form-label">ID</label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label">Role Name</label>
        <input class="form-control" asp-for="RoleName" />
    </div>

  <input type="submit"  value="Save" class="btn btn-warning mt-5" />
    <a asp-action="Index" class="btn btn-light mt-5">Back </a>

</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial">
}
