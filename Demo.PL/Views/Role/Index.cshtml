@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-success mt-5">Add New Role</a>

<br />
@if (Model.Count() > 0)
{

   <br />
    <div class="alert alert-light">
        <h1>Roles</h1>

        <div class="m-2">
            <form class="row offset-2 " asp-action="Index">
                <div class="col-8">
                    <input class="form-control" type="text" placeholder="Role's Name " name="SearchValue" />
                </div>
                <div class="col-4">
                    <input type="submit" value="Search" class="btn btn-info " />
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R =>R.Id)</td>
                <td>@Html.DisplayNameFor(R =>R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    
                    <partial name="_ButtonPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        <h3>There Is No Roles !</h3>
    </div>
}


