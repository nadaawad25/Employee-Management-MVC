@model EmployeeViewModel
@inject IDepartmentRepository DepartmentRepo
@{

    var departments = new SelectList( DepartmentRepo.GetAllAsync().Result, "Id", "Name");
 
}
@if(Model.ImageName is not null)
{
    <div class="form-group">
    <img src="~/Files/Images/@Model.ImageName" class="rounded" width="110" height="140"/>
    <input class="form-control" asp-for="ImageName" type="hidden" />
</div>

}

<div class="form-group">
    <label class="col-form-label">Name</label>
    <input class="form-control" asp-for="Name" readonly />
</div>

<div class="form-group">
    <label class="col-form-label">Age</label>
    <input class="form-control" asp-for="Age" readonly />
</div>

<div class="form-group">
    <label class="col-form-label">Address</label>
    <input class="form-control" asp-for="Address" readonly />
</div>

<div class="form-group">
    <label class="col-form-label">Salary</label>
    <input class="form-control" asp-for="Salary" readonly />
</div>
