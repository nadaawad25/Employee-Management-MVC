@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-danger" asp-validation-summary="All"></div>
<h1> SignIN Form</h1>
<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="Login">
         
            <input class="text2"  asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <br/>
            <input class="text2" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <div class="wthree-text">
                <label class="anim"> 
                    <input asp-for="RememberMe" class="checkbox">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
        <p> <a asp-action="ForgetPassword"> Forget Password</a></p>
    </div>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
+}